

@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

using System.Linq;

<ul class="image-list">

    @foreach (Services.Services.RedCardModel redCard in myRedCards)
    {
        <li>@redCard.Name <br /><img src=@string.Format("{0}",redCard.Image) /></li>
    }

</ul>


@code {
    IQueryable myRedCards;

  Services.Services services = new Services.Services();

  protected override void OnInitialized()
  {
      base.OnInitialized();
        myRedCards= services.GetRedCards();
  }
}

  

