@using MTG.Services
@rendermode InteractiveServer
@using System.Linq
@page "/SearchResult/{searchString}"
@inject NavigationManager NavigationManager

<ul class="image-list">

    @foreach (Search.CardModel myCard in myCards)
    {      
            <img src="@myCard.Image" @onclick="() => NavigateToCard(myCard.Name)" />
    }
    <div class="next-button">
        <button @onclick="() => NextPage()" disabled="@(!CanNavigateNext())">Next</button>
        <button @onclick="() => PreviousPage()" disabled="@(!CanNavigatePrevious())">Previous</button>
    </div>

</ul>


